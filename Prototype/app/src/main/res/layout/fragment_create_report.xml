<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.CreateReportFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Create a report here!"
        android:textSize="14pt"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Topic"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/textTopic"
        android:inputType="text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Description"
        android:ems="10"
        android:layout_below="@+id/textTopic"
        android:layout_alignStart="@+id/textTopic"
        android:layout_marginTop="19dp"
        android:id="@+id/textDesc"
        android:layout_alignEnd="@+id/textTopic" />

    <ImageView
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/btn"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/btn2"
        android:backgroundTint="@color/colorDefaultButton"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <Button
        android:text="Take Picture"
        android:layout_width="130dp"
        android:layout_height="71dp"
        android:id="@+id/btn"
        android:backgroundTint="@color/colorDefaultButton"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textDesc"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp" />

    <Button
        android:text="Upload Picture"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn3"
        android:backgroundTint="@color/colorDefaultButton"
        android:layout_marginStart="30dp"
        android:layout_alignTop="@+id/btn"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageView" />

</RelativeLayout>
